<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chakib.actusplus.DetailActuActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_detail_image_baniere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:gravity="center"
                android:padding="3dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_detail_upper_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ddqdfsdfsd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ddqdfsdfsd"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_detail_image_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:gravity="center"
                android:padding="3dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <WebView
                android:id="@+id/wv_detail_video"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:gravity="center"
                android:padding="3dp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">
            <com.github.rtoshiro.view.video.FullscreenVideoLayout
                android:id="@+id/videoview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_detail_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="ddqdfsdfsddsdqdqdqsdqsdqsd\nfqdfsdfsdfsdfsd\nsdfsdfsdsdf\sdfsdfsdfsdd
                \nqsdqsdqsdqsdqsdqsdqsdqsd\nddqdfsdfsddsdqdqdqsdqsdqsd\nfqdfsdfsdfsdfsd\nsdfsdfsdsdf\sdfsdfsdfsdd\nqsdqsdqsdqsdqsdqsdqsdqsd"
                android:textSize="25sp"  />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
